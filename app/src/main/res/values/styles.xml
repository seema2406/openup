<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textviewregular" parent="@android:style/Widget.TextView">
        <item name="typeface">notosans-regular.ttf</item>
    </style>
    <style name="textviewbold">
        <item name="typeface">notosans-bold.ttf</item>
    </style>

    <style name="textviewitalic">
        <item name="typeface">notosans-italic.ttf</item>
    </style>

    <style name="ThemeToolbar">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>
